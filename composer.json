{
  "name": "drmvc/database",
  "type": "library",
  "description": "Advanced plugin for work with database for DrMVC Framework",
  "homepage": "https://drmvc.com/",
  "license": "MIT",
  "keywords": [
    "php",
    "drmvc",
    "plugin",
    "pdo",
    "mysql",
    "pgsql",
    "mongo",
    "sqlite"
  ],
  "authors": [
    {
      "name": "Paul Rock",
      "email": "paul@drteam.rocks",
      "homepage": "https://drteam.rocks/",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.0",
    "danielstjules/stringy": "~3.1.0",
    "drmvc/config": "^3.0.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.0",
    "phpunit/phpunit": "^6.0",
    "phpunit/dbunit": "^3.0"
  },
  "suggest": {
    "ext-pdo_mysql": "Required for MySQL databases support",
    "ext-pdo_pgsql": "Required for PgSQL databases support",
    "ext-pdo_sqlite": "Required for SQLite3 databases support",
    "ext-mongodb": "Required for Mongo databases support"
  },
  "autoload": {
    "psr-4": {
      "DrMVC\\": "./src/"
    }
  },
  "minimum-stability": "stable"
}
